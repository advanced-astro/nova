---
import site from '@src/site.js';
import Container from '@components/Container.astro';
import Logo from '@components/Logo.astro';
import Icon from '@components/Icon.astro';
import Menu from '@components/Menu.astro';
import MobileMenu from '@components/MobileMenu.astro';
---

<Container
	as="header"
	class="flex items-center justify-between gap-8 py-6 relative z-50"
>
	<Logo />
	<div class="flex flex-col items-end gap-1">
		<div class="flex items-center gap-8">
			<p class="hidden items-center gap-1.5 sm:flex">
				<Icon name="map-marker" class="w-5 h-5" />
				<span class="text-gray-700">Bromley, UK</span>
			</p>
			<a
				class="no-underline text-lg weight-bold"
				href={`tel:${site.phone}`}
			>
				{site.phone}
			</a>
			<MobileMenu name="demo" showPhoneNumber />
		</div>
		<Menu name="demo" />
	</div>
</Container>

