---
import { twMerge as tw } from 'tailwind-merge';
import Container from '@components/Container.astro';

const {
	class: className,
	innerClass: innerClassName,
	backgroundImage,
	contain = true,
	collapseBottom,
	collapseTop,
} = Astro.props;
const TagName = contain ? Container : 'div';
---

<article
	class:list={tw(backgroundImage && 'bg-cover bg-center', className)}
	style={backgroundImage && `background-image: url('${backgroundImage}')`}
>
	<div
		class={tw([
			!collapseBottom && !collapseTop && 'py-12 sm:py-20 md:py-24 lg:py-32',
			collapseBottom && 'pt-12 sm:pt-20 md:pt-24 lg:pt-32',
			collapseTop && 'pb-12 sm:pb-20 md:pb-24 lg:pb-32',
			innerClassName,
		])}
	>
		<TagName>
			<slot />
		</TagName>
	</div>
</article>
