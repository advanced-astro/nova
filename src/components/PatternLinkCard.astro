---
import Icon from '@components/Icon.astro';

const { href, title, icon } = Astro.props;
---

<li>
	<a
		class="group border rounded-lg p-8 flex flex-col justify-center items-center gap-2 transition-colors duration-300 ease-in-out no-underline text-gray-900 hover:bg-gray-800 hover:text-gray-100"
		href={href}
	>
		<Icon
			name={icon}
			class="text-pink-500 w-6 h-6 group-hover:text-yellow-400"
		/>
		<span class="text-lg font-bold tracking-tight">{title}</span>
	</a>
</li>
