---
import Base from '@layouts/Base.astro';
import Flow from '@components/Flow.astro';
import PatternDemo from '@components/PatternDemo.astro';

import LeftLogoRightMenu from '@components/Templates/Headers/LeftLogoRightMenu.astro';
import LeftLogoLeftMenu from '@components/Templates/Headers/LeftLogoLeftMenu.astro';
import LeftLogoRightMenuRightActions from '@components/Templates/Headers/LeftLogoRightMenuRightActions.astro';
import LeftLogoRightActionsCombined from '@components/Templates/Headers/LeftLogoRightActionsCombined.astro';
import CenteredLogo from '@components/Templates/Headers/CenteredLogo.astro';
---

<Base title="Patterns / Headers" class="bg-gray-100">
	<Flow space="lg">
		<PatternDemo
			title="Left Aligned Logo, Right Aligned Menu"
			component="Templates/Headers/LeftLogoRightMenu.astro"
		>
			<LeftLogoRightMenu />
		</PatternDemo>
		<PatternDemo
			title="Left Aligned Logo, Left Aligned Menu, Right Aligned Actions"
			component="Templates/Headers/LeftLogoLeftMenu.astro"
		>
			<LeftLogoLeftMenu />
		</PatternDemo>
		<PatternDemo
			title="Left Aligned Logo, Right Aligned Menu, Right Aligned Actions"
			component="Templates/Headers/LeftLogoRightMenuRightActions.astro"
		>
			<LeftLogoRightMenuRightActions />
		</PatternDemo>
		<PatternDemo
			title="Left Aligned Logo, Right Aligned Menu & Actions"
			component="Templates/Headers/LeftLogoRightActionsCombined.astro"
		>
			<LeftLogoRightActionsCombined />
		</PatternDemo>
		<PatternDemo
			title="Centered Logo, Split Menu"
			component="Templates/Headers/CenteredLogo.astro"
		>
			<CenteredLogo />
		</PatternDemo>
	</Flow>
</Base>
