---
import Base from '@layouts/Base.astro';
import Flow from '@components/Flow.astro';
import PatternDemo from '@components/PatternDemo.astro';

import CenteredSimple from '@components/Templates/Footers/CenteredSimple.astro';
import CenteredSimpleDark from '@components/Templates/Footers/CenteredSimpleDark.astro';
import InformationWithSocialLinks from '@components/Templates/Footers/InformationWithSocialLinks.astro';
import InformationWithSocialLinksDark from '@components/Templates/Footers/InformationWithSocialLinksDark.astro';
import WithNavigationAndContact from '@components/Templates/Footers/WithNavigationAndContact.astro';
import WithNavigationAndContactDark from '@components/Templates/Footers/WithNavigationAndContactDark.astro';
import ContactSection from '@components/Templates/Footers/ContactSection.astro';
---

<Base title="Patterns / Footers" class="bg-gray-100">
	<Flow space="lg">
		<PatternDemo
			title="Centered Simple"
			component="Templates/Footers/CenteredSimple.astro"
		>
			<CenteredSimple />
		</PatternDemo>
		<PatternDemo
			title="Centered Simple (Dark)"
			component="Templates/Footers/CenteredSimpleDark.astro"
		>
			<CenteredSimpleDark />
		</PatternDemo>
		<PatternDemo
			title="Information with Social Links"
			component="Templates/Footers/InformationWithSocialLinks.astro"
		>
			<InformationWithSocialLinks />
		</PatternDemo>
		<PatternDemo
			title="Information with Social Links (Dark)"
			component="Templates/Footers/InformationWithSocialLinksDark.astro"
		>
			<InformationWithSocialLinksDark />
		</PatternDemo>
		<PatternDemo
			title="With Navigation and Contact Details"
			component="Templates/Footers/WithNavigationAndContact.astro"
		>
			<WithNavigationAndContact />
		</PatternDemo>
		<PatternDemo
			title="With Navigation and Contact Details (Dark)"
			component="Templates/Footers/WithNavigationAndContactDark.astro"
		>
			<WithNavigationAndContactDark />
		</PatternDemo>
		<PatternDemo
			title="Contact Section"
			component="Templates/Footers/ContactSection.astro"
		>
			<ContactSection />
		</PatternDemo>
	</Flow>
</Base>
