---
import Base from '@layouts/Base.astro';
import Button from '@components/Button.astro';
import Icon from '@components/Icon.astro';
import Grid from '@components/Grid.astro';
import Section from '@components/Section.astro';
import Gallery from '@components/Gallery.astro';
import Flow from '@components/Flow.astro';
import ProjectCard from '@components/ProjectCard.astro';
import TestimonialCard from '@components/TestimonialCard.astro';
---

<Base>
	<Section collapseBottom>
		<div class="flow flow-space-3 text-center max-w-2xl mx-auto">
			<span
				class="text-xs bg-gradient-to-br from-orange-100 to-pink-100 text-black/75 rounded-full px-3 py-1.5 leading-none inline-block uppercase font-bold tracking-wide"
			>
				Example
			</span>
			<h1>Building a Website has Never Been This Easy</h1>
			<p class="text-xl text-balance">
				Lorum ipsum dolor sit amet, consectetur adipiscing elit. Donec a
				diam lectus.
			</p>
			<Button href="/contact">
				Get Started
				<Icon
					name="arrow-right"
					class="text-white text-xl"
					slot="end"
				/>
			</Button>
		</div>
	</Section>
	<Section class="bg-gradient-to-b from-white to-teal-50">
		<Grid>
			<img
				class="border-white/50 border-2 shadow-xl rounded-xl"
				src="https://unsplash.it/800/600"
				alt=""
				width="800"
				height="600"
			/>
			<div class="flow">
				<h2>Lorum Ipsum</h2>
				<p>
					Lorem ipsum dolor sit amet, consectetur adipiscing elit.
					Donec a diam lectus. Sed sit amet ipsum mauris. Maecenas
					congue ligula ac quam viverra nec consectetur ante
					hendrerit.
				</p>
			</div>
		</Grid>
	</Section>
	<Section
		backgroundImage="https://unsplash.it/1920/1080"
		innerClass="text-white bg-gradient-to-br from-orange-500/80 to-pink-500/80 bg-opacity-50"
	>
		<div class="flow text-center mx-auto max-w-lg">
			<h2>This is a Section</h2>
			<p>
				Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec a
				diam lectus. Sed sit amet ipsum mauris. Maecenas congue ligula
				ac quam viverra nec consectetur ante hendrerit.
			</p>
			<Button href="/contact" icon="caret-down" variant="secondary">
				Get Started
				<Icon
					name="arrow-right"
					class="fill-current text-xl"
					slot="end"
				/>
			</Button>
		</div>
	</Section>
	<Section>
		<div class="flow flow-space-6">
			<header class="flow flow-space-0.5 text-center max-w-md mx-auto">
				<h2>Our Work</h2>
				<p>
					Some of our favourite work. Like what you see? <a
						href="/contact">Work with us.</a
					>
				</p>
			</header>
			<Gallery
				imageClass="border-white/50 border-2 shadow-lg overflow-hidden rounded-xl transition hover:grayscale"
				images={[
					{ src: 'https://unsplash.it/1080?random=1' },
					{ src: 'https://unsplash.it/1080?random=2' },
					{ src: 'https://unsplash.it/1080?random=3' },
					{ src: 'https://unsplash.it/1080?random=4' },
				]}
			/>
		</div>
	</Section>
	<Section class="bg-gray-100">
		<Flow space="md">
			<h2 class="text-center">Latest Projects</h2>
			<Grid class="md:gap-8">
				<ProjectCard
					title="Project Title"
					image="https://unsplash.it/800/600?random=1"
					date="7th July 2023"
					href="#"
				/>
				<ProjectCard
					title="Project Title"
					image="https://unsplash.it/800/600?random=2"
					date="4th July 2023"
					href="#"
				/>
			</Grid>
		</Flow>
	</Section>
	<Section>
		<Flow space="md">
			<h2 class="text-center">Testimonials</h2>
			<div class="columns-1 gap-8 md:columns-2 lg:columns-3">
				<TestimonialCard
					content="Pearl Builders And Stone Restoration Ltd are dedicated to professionalism throughout our service, never settling for anything less than exceptional results and total customer satisfaction."
					name="Joe"
				/>
				<TestimonialCard
					content="We used Pearl Builders for our loft conversion and building a new garden office with utility room. Having experienced being messed around by unreliable people before, it was a breath of fresh air to have Pearl help us. The quality of the work was excellent, everything happened on budget and on schedule and the team are fantastic to work with. We were kept up to date throughout and some of the small touches they recommended, have made a massive improvement to what we have. I would recommend anyone to use them."
					name="Mark"
				/>
				<TestimonialCard
					content="I couldn't be happier with the work and services provided by Pearl Builders. I had my garden and garage completely reworked and converted. Final bill had no hidden extras and came in as expected with works completed on time. There was always more than 2 on site working tirelessly and very polite. Great work, thank you."
					name="Nancy"
				/>
				<TestimonialCard
					content="I found Pearlbuilders worked to a very high standard, always on time and worked efficiently as a team.Fixed any unforeseen issues that arose. Highly recommend."
					name="Avinash"
				/>
			</div>
		</Flow>
	</Section>
</Base>
